APP_ID=
DISCORD_TOKEN=
PUBLIC_KEY=
PORT=3000

# Rule Guardian (MVP-1)
RG_ENABLED=true

# Optional: lock moderation to one server.
# If unset, the bot can run in any server it is in.
RG_GUILD_ID=

# Rule channel targeting:
# Prefer IDs in production; name fallback is for quick setup.
RG_RULE_CHANNEL_IDS=
RG_RULE_CHANNEL_NAMES=chatter

# Mod-log targeting:
# Prefer ID in production; name fallback is for quick setup.
RG_MOD_LOG_CHANNEL_ID=
RG_MOD_LOG_CHANNEL_NAME=mod-log

# Detection rules
RG_RESTRICTED_TERMS=sell
RG_ENABLE_PRICE_PATTERN=true
RG_PRICE_KEYWORDS=usd,shipped

# Placeholder for future exceptions.
# Example: RG_EXCEPTION_PATTERNS=wholesale,reseller agreement
RG_EXCEPTION_PATTERNS=

# Warning behavior
RG_WARNING_COOLDOWN_SECONDS=120
RG_LOG_MATCHED_TERMS=true
RG_RULES_URL=
